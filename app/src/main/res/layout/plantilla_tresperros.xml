<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvPacknamePlantilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ivPerro1Plantilla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Perritos Facilones" />

    <ImageView
        android:id="@+id/ivPerro1Plantilla"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/tvPackLevelPlantilla"
        app:layout_constraintEnd_toStartOf="@+id/ivPerro2Plantilla"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPacknamePlantilla"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivPerro2Plantilla"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@+id/ivPerro1Plantilla"
        app:layout_constraintEnd_toStartOf="@+id/ivPerro3Plantilla"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivPerro1Plantilla"
        app:layout_constraintTop_toTopOf="@+id/ivPerro1Plantilla"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivPerro3Plantilla"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@+id/ivPerro2Plantilla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivPerro2Plantilla"
        app:layout_constraintTop_toTopOf="@+id/ivPerro2Plantilla"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvPackLevelPlantilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btAccionPlantilla"
        app:layout_constraintStart_toStartOf="@+id/ivPerro1Plantilla"
        app:layout_constraintTop_toBottomOf="@+id/ivPerro1Plantilla"
        tools:text="Nivel: Muy FÃ¡cil" />

    <Button
        android:id="@+id/btAccionPlantilla"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#FAC6C6"
        android:backgroundTintMode="add"
        android:minHeight="3dp"
        android:text="Accion"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tvPackLevelPlantilla"
        app:layout_constraintTop_toBottomOf="@+id/tvPackLevelPlantilla" />

</androidx.constraintlayout.widget.ConstraintLayout>